<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:DocumentMaker.View.Controls">

    <Style x:Key="InputWithTextFreeValidation" TargetType="uc:InputWithText">
        <Setter Property="InputBackground" Value="#ebffdb" />
    </Style>

    <Style x:Key="InputWithTextNumberValidation" TargetType="uc:InputWithText">
        <Setter Property="InputBackground" Value="AliceBlue" />
    </Style>

    <Style x:Key="ChooseTemplateComboBox" TargetType="ComboBox">
        <Setter Property="Margin" Value="10,8,10,10" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style x:Key="ExportBtn" TargetType="Button">
        <Setter Property="Margin" Value="10,38,10,10" />
        <Setter Property="FontSize" Value="15" />
    </Style>
</ResourceDictionary>