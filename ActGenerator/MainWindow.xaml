<Window
    x:Class="ActGenerator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:humanEditor="clr-namespace:HumanEditorLib.View;assembly=HumanEditorLib"
    xmlns:local="clr-namespace:ActGenerator"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    FontSize="15"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/HumanEditorLib;component/ResourceDictionaries/HumanEditDictionary.xaml" />
    </Window.Resources>
    <materialDesign:Card>
        <TabControl Margin="0" materialDesign:ColorZoneAssist.Mode="PrimaryMid">
            <TabItem Header="ПРАЦІВНИК">
                <humanEditor:HumanEdit />
            </TabItem>
            <TabItem Header="БАНК">
                <humanEditor:BankEdit />
            </TabItem>
            <TabItem Header="ВУЛИЦЯ">
                <humanEditor:StreetEdit />
            </TabItem>
            <TabItem Header="МІСТО">
                <humanEditor:LocalityEdit />
            </TabItem>
        </TabControl>
    </materialDesign:Card>
</Window>
