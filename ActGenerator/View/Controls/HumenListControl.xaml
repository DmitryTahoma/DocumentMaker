<UserControl
    x:Class="ActGenerator.View.Controls.HumenListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource LabelHeaderTextBlock}" Text="Список працівників" />

        <Menu Grid.Row="1">
            <MenuItem ToolTip="Додати">
                <MenuItem.Header>
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="PlusCircleOutline" />
                </MenuItem.Header>
            </MenuItem>
            <MenuItem CommandParameter="{Binding ElementName=HumenListView, Path=SelectedItems}" ToolTip="Видалити">
                <MenuItem.Header>
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="SortVariantRemove" />
                </MenuItem.Header>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <CheckBox />
            <TextBlock
                Grid.Column="1"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Text="ПІБ" />
            <TextBlock
                Grid.Column="2"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Text="Сума" />
            <TextBlock
                Grid.Column="3"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Text="Шаблони" />

            <CheckBox Grid.Row="1" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Text="Алєйникова Марина Сергіївна" />
            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                MinWidth="75"
                Margin="5,0"
                Text="150000" />

            <StackPanel
                Grid.Row="1"
                Grid.Column="3"
                Orientation="Horizontal">
                <TextBlock
                    Margin="5,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="Технічний дизайнер, Скриптувальник" />

                <materialDesign:PopupBox Padding="10" StaysOpen="True">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <CheckBox IsChecked="{x:Null}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontWeight="Bold"
                                Style="{StaticResource MaterialDesignButtonTextBlock}"
                                Text="Шаблони" />
                        </Grid>
                        <CheckBox Content="Технічний дизайнер" IsChecked="True" />
                        <CheckBox Content="Скриптувальник" IsChecked="True" />
                        <CheckBox Content="Художник" />
                        <CheckBox Content="Моделлер" />
                    </StackPanel>
                </materialDesign:PopupBox>

            </StackPanel>

            <CheckBox Grid.Row="2" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Margin="5,10,5,5"
                Text="Баєв Олександр Євгенович" />
            <TextBox
                Grid.Row="2"
                Grid.Column="2"
                MinWidth="75"
                Margin="5,10,5,5"
                Text="76000" />
            <StackPanel
                Grid.Row="2"
                Grid.Column="3"
                Margin="5,10,5,5"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="Художник, Скриптувальник, Технічний дизайнер, Моделлер" />

                <materialDesign:PopupBox Padding="10" StaysOpen="True">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <CheckBox IsChecked="True" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontWeight="Bold"
                                Style="{StaticResource MaterialDesignButtonTextBlock}"
                                Text="Шаблони" />
                        </Grid>
                        <CheckBox Content="Технічний дизайнер" IsChecked="True" />
                        <CheckBox Content="Скриптувальник" IsChecked="True" />
                        <CheckBox Content="Художник" IsChecked="True" />
                        <CheckBox Content="Моделлер" IsChecked="True" />
                    </StackPanel>
                </materialDesign:PopupBox>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
