<UserControl
    x:Class="ActGenerator.View.Controls.CheckBoxList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ActGenerator.View.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CodeBehind"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel LastChildFill="True">

        <materialDesign:PopupBox DockPanel.Dock="Right" Style="{StaticResource CheckBoxListButtonPopupBox}">
            <DockPanel LastChildFill="True">

                <Grid DockPanel.Dock="Top">
                    <CheckBox Command="{Binding ElementName=CodeBehind, Path=SelectAllCommand}" IsChecked="{Binding ElementName=CodeBehind, Path=IsSelectedAll, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource CheckBoxListHeaderTextBlock}" Text="Шаблони" />
                </Grid>

                <StackPanel x:Name="ItemsStackPanel" Orientation="Vertical" />
            </DockPanel>
        </materialDesign:PopupBox>

        <TextBlock Style="{StaticResource CenterTextBlock}" Text="{Binding ElementName=CodeBehind, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

    </DockPanel>

</UserControl>
