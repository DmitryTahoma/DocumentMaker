<UserControl
    x:Class="ActGenerator.View.Controls.ProjectNamesListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ActGenerator.View.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Style="{StaticResource LabelHeaderTextBlock}" Text="Список проектів" />

            <Menu Grid.Row="1">
                <MenuItem ToolTip="Додати">
                    <MenuItem.Header>
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="PlusCircleOutline" />
                    </MenuItem.Header>
                </MenuItem>
            </Menu>

            <ScrollViewer
                x:Name="ProjectsScrollViewer"
                Grid.Row="2"
                VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="ProjectsStackWithNames">
                    <materialDesign:Chip
                        Content="Escape"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                    <materialDesign:Chip
                        Content="Exit"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                    <materialDesign:Chip
                        Content="Lost Lands 8"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                    <materialDesign:Chip
                        Content="Lost Lands 7"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                    <materialDesign:Chip
                        Content="Lost Lands 6"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                    <materialDesign:Chip
                        Content="Lost Lands 5"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                    <materialDesign:Chip
                        Content="Lost Lands 4"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                    <materialDesign:Chip
                        Content="Darkness and Flame 2"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                    <materialDesign:Chip
                        Content="Darkness and Flame 3"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                    <materialDesign:Chip
                        Content="Darkness and Flame 4"
                        IsDeletable="True"
                        Style="{StaticResource MaterialDesignOutlineChip}" />
                </WrapPanel>
            </ScrollViewer>
        </Grid>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Visibility="Collapsed">
            <ProgressBar
                IsIndeterminate="True"
                Style="{StaticResource MaterialDesignCircularProgressBar}"
                Value="35" />
            <TextBlock
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                Text="підключення до бази даних" />
        </StackPanel>
    </Grid>

</UserControl>
