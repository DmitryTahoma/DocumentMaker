<Window
    x:Class="SendException.ViewReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SendException"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ViewReport"
    Width="670"
    Height="482.5"
    BorderThickness="1"
    KeyDown="ControlKeyDown"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            x:Name="TextBlockDecriptionExc"
            Grid.Row="0"
            FontSize="15"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            Style="{x:Null}"
            Text="{Binding DecriptionExc, ElementName=DialogContext, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
    </Grid>
</Window>
