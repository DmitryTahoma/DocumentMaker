<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dml="clr-namespace:Dml.Controls">

    <Style x:Key="InputWithTextFreeValidation" TargetType="dml:InputWithText">
        <Setter Property="InputBackground" Value="#ebffdb" />
    </Style>

    <Style x:Key="InputWithTextNumberValidation" TargetType="dml:InputWithText">
        <Setter Property="InputBackground" Value="AliceBlue" />
    </Style>

    <Style x:Key="ChooseTemplateComboBox" TargetType="ComboBox">
        <Setter Property="Margin" Value="10,8" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style x:Key="ExportBtn" TargetType="Button">
        <Setter Property="Margin" Value="10,38,10,10" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style x:Key="LabelRight" TargetType="TextBlock">
        <Setter Property="Margin" Value="10,10,10,0" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>

    <Style x:Key="LeftButton" TargetType="Button">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="FontSize" Value="15" />
    </Style>

</ResourceDictionary>