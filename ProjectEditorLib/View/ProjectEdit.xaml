<UserControl
    x:Class="ProjectEditorLib.View.ProjectEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectEditorLib.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DocumentMakerThemes;component/ResourceDictionaries/StyleDictionary.xaml" />

                <ResourceDictionary>
                    <ContextMenu x:Key="ProjectContextMenuWithEpisodes">
                        <MenuItem Header="Додати епізод" />
                    </ContextMenu>

                    <ContextMenu x:Key="ProjectContextMenuWithoutEpisodes">
                        <MenuItem Header="Додати бек" />
                        <MenuItem Header="Додати крафт" />
                    </ContextMenu>

                    <ContextMenu x:Key="EpisodeContextMenu">
                        <MenuItem Header="Додати бек" />
                        <MenuItem Header="Додати крафт" />
                        <Separator />
                        <MenuItem Header="Видалити епізод" />
                    </ContextMenu>

                    <ContextMenu x:Key="BackContextMenu">
                        <MenuItem Header="Додати мініігру" />
                        <MenuItem Header="Додати діалог" />
                        <MenuItem Header="Додати хог" />
                        <Separator />
                        <MenuItem Header="Видалити бек" />
                    </ContextMenu>

                    <ContextMenu x:Key="CraftContextMenu">
                        <MenuItem Header="Додати мінігру" />
                        <MenuItem Header="Додати хог" />
                        <Separator />
                        <MenuItem Header="Видалити крафт" />
                    </ContextMenu>

                    <ContextMenu x:Key="MinigameContextMenu">
                        <MenuItem Header="Додати регіони" />
                        <Separator />
                        <MenuItem Header="Видалити мінігру" />
                    </ContextMenu>

                    <ContextMenu x:Key="HogContextMenu">
                        <MenuItem Header="Додати мінігру" />
                        <Separator />
                        <MenuItem Header="Видалити хог" />
                    </ContextMenu>

                    <ContextMenu x:Key="DialogContextMenu">
                        <MenuItem Header="Видалити діалог" />
                    </ContextMenu>

                    <ContextMenu x:Key="RegionsContextMenu">
                        <MenuItem Header="Видалити регіони" />
                    </ContextMenu>
                </ResourceDictionary>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TreeView MinWidth="220" Background="#f9f9f9">
            <TreeViewItem ContextMenu="{StaticResource ProjectContextMenuWithEpisodes}">
                <TreeViewItem.Header>
                    <local:TreeItemHeader IconKind="AlphaPBoxOutline" Text="Escape" />
                </TreeViewItem.Header>
                <TreeViewItem ContextMenu="{StaticResource EpisodeContextMenu}">
                    <TreeViewItem.Header>
                        <local:TreeItemHeader IconKind="AlphaEBoxOutline" Text="1. Котедж" />
                    </TreeViewItem.Header>
                    <TreeViewItem ContextMenu="{StaticResource BackContextMenu}">
                        <TreeViewItem.Header>
                            <local:TreeItemHeader IconKind="AlphaBBoxOutline" Text="1. Вітальня" />
                        </TreeViewItem.Header>
                        <TreeViewItem ContextMenu="{StaticResource MinigameContextMenu}">
                            <TreeViewItem.Header>
                                <local:TreeItemHeader IconKind="AlphaMBoxOutline" Text="1. Скриня" />
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem ContextMenu="{StaticResource MinigameContextMenu}">
                            <TreeViewItem.Header>
                                <local:TreeItemHeader IconKind="AlphaMBoxOutline" Text="2. Шахмати" />
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem ContextMenu="{StaticResource MinigameContextMenu}">
                            <TreeViewItem.Header>
                                <local:TreeItemHeader IconKind="AlphaMBoxOutline" Text="3. Замок до пiдвалу" />
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem ContextMenu="{StaticResource BackContextMenu}">
                        <TreeViewItem.Header>
                            <local:TreeItemHeader IconKind="AlphaBBoxOutline" Text="2. Кухня" />
                        </TreeViewItem.Header>
                        <TreeViewItem ContextMenu="{StaticResource MinigameContextMenu}">
                            <TreeViewItem.Header>
                                <local:TreeItemHeader IconKind="AlphaMBoxOutline" Text="1. Мiкрохвильова пiч" />
                            </TreeViewItem.Header>
                            <TreeViewItem ContextMenu="{StaticResource RegionsContextMenu}">
                                <TreeViewItem.Header>
                                    <local:TreeItemHeader IconKind="AlphaRBoxOutline" Text="Регіони" />
                                </TreeViewItem.Header>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem ContextMenu="{StaticResource HogContextMenu}">
                            <TreeViewItem.Header>
                                <local:TreeItemHeader IconKind="AlphaHBoxOutline" Text="1. Хог" />
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem ContextMenu="{StaticResource DialogContextMenu}">
                            <TreeViewItem.Header>
                                <local:TreeItemHeader IconKind="AlphaDBoxOutline" Text="1. Діалог" />
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem ContextMenu="{StaticResource CraftContextMenu}">
                        <TreeViewItem.Header>
                            <local:TreeItemHeader IconKind="AlphaCBoxOutline" Text="Магніт на мотузці" />
                        </TreeViewItem.Header>
                    </TreeViewItem>
                    <TreeViewItem ContextMenu="{StaticResource CraftContextMenu}">
                        <TreeViewItem.Header>
                            <local:TreeItemHeader IconKind="AlphaCBoxOutline" Text="Шуруповерт" />
                        </TreeViewItem.Header>
                    </TreeViewItem>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
    </Grid>
</UserControl>
