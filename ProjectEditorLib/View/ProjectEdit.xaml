<UserControl
    x:Class="ProjectEditorLib.View.ProjectEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectEditorLib.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myConverters="clr-namespace:ProjectEditorLib.Converters"
    xmlns:vm="clr-namespace:ProjectEditorLib.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:ProjectEditViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DocumentMakerThemes;component/ResourceDictionaries/StyleDictionary.xaml" />

                <ResourceDictionary>
                    <ContextMenu x:Key="ProjectContextMenuWithEpisodes">
                        <MenuItem Header="Додати епізод" />
                    </ContextMenu>

                    <ContextMenu x:Key="ProjectContextMenuWithoutEpisodes">
                        <MenuItem Header="Додати бек" />
                        <MenuItem Header="Додати крафт" />
                    </ContextMenu>

                    <ContextMenu x:Key="EpisodeContextMenu">
                        <MenuItem Header="Додати бек" />
                        <MenuItem Header="Додати крафт" />
                        <Separator />
                        <MenuItem Header="Видалити епізод" />
                    </ContextMenu>

                    <ContextMenu x:Key="BackContextMenu">
                        <MenuItem Header="Додати мініігру" />
                        <MenuItem Header="Додати діалог" />
                        <MenuItem Header="Додати хог" />
                        <Separator />
                        <MenuItem Header="Видалити бек" />
                    </ContextMenu>

                    <ContextMenu x:Key="CraftContextMenu">
                        <MenuItem Header="Додати мінігру" />
                        <MenuItem Header="Додати хог" />
                        <Separator />
                        <MenuItem Header="Видалити крафт" />
                    </ContextMenu>

                    <ContextMenu x:Key="MinigameContextMenu">
                        <MenuItem Header="Додати регіони" />
                        <Separator />
                        <MenuItem Header="Видалити мінігру" />
                    </ContextMenu>

                    <ContextMenu x:Key="HogContextMenu">
                        <MenuItem Header="Додати мінігру" />
                        <Separator />
                        <MenuItem Header="Видалити хог" />
                    </ContextMenu>

                    <ContextMenu x:Key="DialogContextMenu">
                        <MenuItem Header="Видалити діалог" />
                    </ContextMenu>

                    <ContextMenu x:Key="RegionsContextMenu">
                        <MenuItem Header="Видалити регіони" />
                    </ContextMenu>

                    <myConverters:ProjectNodeTypeToPackIconKindConverter x:Key="ProjectNodeTypeToPackIconKindConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TreeView
            MinWidth="220"
            Background="#f9f9f9"
            ItemsSource="{Binding ProjectNodes}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=ProjectNodes}">
                    <local:TreeItemHeader IconKind="{Binding Type, Converter={StaticResource ProjectNodeTypeToPackIconKindConverter}}" Text="{Binding Text}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <local:CraftView Grid.Column="1" />
    </Grid>
</UserControl>
