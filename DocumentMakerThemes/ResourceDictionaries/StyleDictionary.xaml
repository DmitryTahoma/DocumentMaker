<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/DocumentMakerThemes;component/ResourceDictionaries/MaterialDesignThemes.xaml" />
        <ResourceDictionary>

            <Style
                x:Key="FirstTextBox"
                BasedOn="{StaticResource MaterialDesignOutlinedTextBox}"
                TargetType="TextBox">
                <Setter Property="Margin" Value="5,5,2.5,5" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="materialDesign:ValidationAssist.OnlyShowOnFocus" Value="True" />
            </Style>

            <Style
                x:Key="MiddleTextBox"
                BasedOn="{StaticResource MaterialDesignOutlinedTextBox}"
                TargetType="TextBox">
                <Setter Property="Margin" Value="2.5,5,2.5,5" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="materialDesign:ValidationAssist.OnlyShowOnFocus" Value="True" />
            </Style>

            <Style
                x:Key="LastTextBox"
                BasedOn="{StaticResource MaterialDesignOutlinedTextBox}"
                TargetType="TextBox">
                <Setter Property="Margin" Value="2.5,5,5,5" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="materialDesign:ValidationAssist.OnlyShowOnFocus" Value="True" />
            </Style>

            <Style
                x:Key="SmallTextBox"
                BasedOn="{StaticResource MaterialDesignOutlinedTextBox}"
                TargetType="TextBox">
                <Setter Property="Margin" Value="5,2.5" />
                <Setter Property="materialDesign:ValidationAssist.OnlyShowOnFocus" Value="True" />
            </Style>

            <Style
                x:Key="FirstSmallTextBox"
                BasedOn="{StaticResource MaterialDesignOutlinedTextBox}"
                TargetType="TextBox">
                <Setter Property="Margin" Value="5,2.5,2.5,2.5" />
                <Setter Property="materialDesign:ValidationAssist.OnlyShowOnFocus" Value="True" />
            </Style>

            <Style
                x:Key="LastSmallTextBox"
                BasedOn="{StaticResource MaterialDesignOutlinedTextBox}"
                TargetType="TextBox">
                <Setter Property="Margin" Value="2.5,2.5,5,2.5" />
                <Setter Property="materialDesign:ValidationAssist.OnlyShowOnFocus" Value="True" />
            </Style>

            <Style
                x:Key="FirstComboBox"
                BasedOn="{StaticResource MaterialDesignOutlinedComboBox}"
                TargetType="ComboBox">
                <Setter Property="Margin" Value="5,5,2.5,5" />
            </Style>

            <Style
                x:Key="MiddleComboBox"
                BasedOn="{StaticResource MaterialDesignOutlinedComboBox}"
                TargetType="ComboBox">
                <Setter Property="Margin" Value="2.5,5,2.5,5" />
            </Style>

            <Style x:Key="DefaultCard" TargetType="materialDesign:Card">
                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1" />
                <Setter Property="Padding" Value="5" />
            </Style>

            <Style
                x:Key="MiddleCard"
                BasedOn="{StaticResource DefaultCard}"
                TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="5" />
            </Style>

            <Style
                x:Key="FirstCard"
                BasedOn="{StaticResource DefaultCard}"
                TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="5,5,2.5,5" />
            </Style>

            <Style
                x:Key="LastCard"
                BasedOn="{StaticResource DefaultCard}"
                TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="2.5,5,5,5" />
            </Style>

            <Style
                x:Key="TopFirstCard"
                BasedOn="{StaticResource DefaultCard}"
                TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="5,5,2.5,2.5" />
            </Style>

            <Style
                x:Key="TopLastCard"
                BasedOn="{StaticResource DefaultCard}"
                TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="2.5,5,5,2.5" />
            </Style>

            <Style
                x:Key="BottomFirstCard"
                BasedOn="{StaticResource DefaultCard}"
                TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="5,2.5,2.5,5" />
            </Style>

            <Style
                x:Key="BottomLastCard"
                BasedOn="{StaticResource DefaultCard}"
                TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="2.5,2.5,5,5" />
            </Style>

            <Style
                x:Key="TopMiddleCard"
                BasedOn="{StaticResource DefaultCard}"
                TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="2.5,5,2.5,2.5" />
            </Style>

            <Style x:Key="LabelHeaderTextBlock" TargetType="TextBlock">
                <Setter Property="FontSize" Value="17" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="LabelTopHeaderTextBlock" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style
                x:Key="FirstDatePicker"
                BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}"
                TargetType="DatePicker">
                <Setter Property="Margin" Value="5,5,2.5,5" />
                <Setter Property="Padding" Value="5" />
            </Style>

            <Style
                x:Key="LastDatePicker"
                BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}"
                TargetType="DatePicker">
                <Setter Property="Margin" Value="2.5,5,5,5" />
                <Setter Property="Padding" Value="5" />
            </Style>

            <Style x:Key="CenterTextBlock" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style
                x:Key="RowHeaderTextBlock"
                BasedOn="{StaticResource CenterTextBlock}"
                TargetType="TextBlock" />

            <Style x:Key="FirstRightTextBlock" TargetType="TextBlock">
                <Setter Property="Margin" Value="5,5,2.5,5" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="ToolBarButton" TargetType="Button">
                <Setter Property="Padding" Value="5" />
            </Style>

            <Style
                x:Key="PlacedCheckBox"
                BasedOn="{StaticResource MaterialDesignCheckBox}"
                TargetType="CheckBox">
                <Setter Property="Margin" Value="5" />
            </Style>

            <Style
                x:Key="PlacedMaterialDesignOutlinedDarkButton"
                BasedOn="{StaticResource MaterialDesignOutlinedDarkButton}"
                TargetType="Button">
                <Setter Property="Margin" Value="10" />
            </Style>

            <Style
                x:Key="ComboBoxInCheckBox"
                BasedOn="{StaticResource MaterialDesignComboBox}"
                TargetType="ComboBox">
                <Setter Property="Margin" Value="5,0" />
                <Setter Property="Padding" Value="0" />
            </Style>

            <Style x:Key="DialogGrid" TargetType="Grid">
                <Setter Property="Margin" Value="6" />
            </Style>

            <Style
                x:Key="DialogButton"
                BasedOn="{StaticResource MaterialDesignPaperDarkButton}"
                TargetType="Button">
                <Setter Property="Margin" Value="6" />
            </Style>

            <Style
                x:Key="BacksLoadingProgressBar"
                BasedOn="{StaticResource MaterialDesignLinearProgressBar}"
                TargetType="ProgressBar">
                <Setter Property="Height" Value="20" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="Background" Value="LightGray" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Foreground" Value="MediumPurple" />
            </Style>

            <Style x:Key="CenterHorizontalStackPanel" TargetType="StackPanel">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Orientation" Value="Horizontal" />
            </Style>

            <Style x:Key="IconForMenuItem" TargetType="materialDesign:PackIcon">
                <Setter Property="Width" Value="24" />
                <Setter Property="Height" Value="24" />
            </Style>

            <Style
                x:Key="DeletableMaterialDesignOutlineChip"
                BasedOn="{StaticResource MaterialDesignOutlineChip}"
                TargetType="materialDesign:Chip">
                <Setter Property="IsDeletable" Value="True" />
            </Style>

            <Style
                x:Key="WaitingProgressBar"
                BasedOn="{StaticResource MaterialDesignCircularProgressBar}"
                TargetType="ProgressBar">
                <Setter Property="IsIndeterminate" Value="True" />
                <Setter Property="Value" Value="35" />
            </Style>

            <Style
                x:Key="TextBlockOfWaitingControl"
                BasedOn="{StaticResource MaterialDesignSubtitle2TextBlock}"
                TargetType="TextBlock">
                <Setter Property="Margin" Value="5,0,0,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="AddProjectNameScrollViewer" TargetType="ScrollViewer">
                <Setter Property="MinWidth" Value="250" />
                <Setter Property="Height" Value="500" />
                <Setter Property="Padding" Value="5,0" />
            </Style>

            <Style
                x:Key="AddProjectNameListItemCheckBox"
                BasedOn="{StaticResource MaterialDesignCheckBox}"
                TargetType="CheckBox">
                <Setter Property="Margin" Value="3" />
            </Style>

            <Style
                x:Key="AddProjectNameHeaderItemCheckBox"
                BasedOn="{StaticResource MaterialDesignCheckBox}"
                TargetType="CheckBox">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Margin" Value="2.5,0,0,0" />
            </Style>

            <Style
                x:Key="AddProjectNameRightHeaderItemCheckBox"
                BasedOn="{StaticResource AddProjectNameHeaderItemCheckBox}"
                TargetType="CheckBox">
                <Setter Property="Margin" Value="7.5,0,0,0" />
            </Style>

            <Style x:Key="AddProjectNameTopCard" TargetType="materialDesign:Card">
                <Setter Property="Padding" Value="5" />
                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1" />
                <Setter Property="materialDesign:ShadowAssist.ShadowEdges" Value="Bottom" />
            </Style>

            <Style x:Key="AddProjectNameBottomCard" TargetType="materialDesign:Card">
                <Setter Property="Padding" Value="5" />
                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth3" />
                <Setter Property="materialDesign:ShadowAssist.ShadowEdges" Value="Top" />
            </Style>

            <Style
                x:Key="CheckBoxListHeaderCheckBox"
                BasedOn="{StaticResource MaterialDesignCheckBox}"
                TargetType="CheckBox">
                <Setter Property="MinWidth" Value="100" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="CheckBoxListButtonPopupBox" TargetType="materialDesign:PopupBox">
                <Setter Property="Padding" Value="10" />
                <Setter Property="StaysOpen" Value="True" />
            </Style>

            <Style
                x:Key="HumenListControlHeaderCheckBox"
                BasedOn="{StaticResource MaterialDesignCheckBox}"
                TargetType="CheckBox">
                <Setter Property="Margin" Value="0,0,15,10" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style x:Key="HumenListControlHeaderTextBlock" TargetType="TextBlock">
                <Setter Property="Margin" Value="15,0,15,10" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style
                x:Key="HumenListControlItemTextBox"
                BasedOn="{StaticResource MaterialDesignTextBox}"
                TargetType="TextBox">
                <Setter Property="MinWidth" Value="75" />
                <Setter Property="Margin" Value="15,0" />
            </Style>

            <Style x:Key="AddHumanDialogHeaderCard" TargetType="materialDesign:Card">
                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1" />
                <Setter Property="materialDesign:ShadowAssist.ShadowEdges" Value="Bottom" />
            </Style>

            <Style
                x:Key="AddHumanDialogHeaderCheckBox"
                BasedOn="{StaticResource MaterialDesignCheckBox}"
                TargetType="CheckBox">
                <Setter Property="Margin" Value="5" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="AddHumanDialogHeaderTextBlock" TargetType="TextBlock">
                <Setter Property="Margin" Value="5" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style
                x:Key="AddHumanDialogItemCheckBox"
                BasedOn="{StaticResource MaterialDesignCheckBox}"
                TargetType="CheckBox">
                <Setter Property="Margin" Value="5" />
            </Style>

            <Style x:Key="AddHumanDialogItemTextBlock" TargetType="TextBlock">
                <Setter Property="Margin" Value="22,5,5,5" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
            </Style>

            <Style x:Key="AddHumanDialogBottomCard" TargetType="materialDesign:Card">
                <Setter Property="Padding" Value="5" />
                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth3" />
                <Setter Property="materialDesign:ShadowAssist.ShadowEdges" Value="Top" />
            </Style>

        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>